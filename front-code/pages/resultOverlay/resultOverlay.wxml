<view class="overlay">
  <view class="result-card">
    <view class="header">
      <text class="title">测试结果</text>
    </view>
    <view class="content">
      <view class="disciple-info">
        <text class="disciple-name">{{discipleName}}\n</text>\n
        <text class="disciple-description">你与{{discipleName}}最为相似</text>
      </view>
      <view class="dialogue">
        <view class="bubble system-bubble">
          <text class="original-text">{{confuciusQuote}}</text> <!-- 孔子的原话 -->
        </view>
        <view class="bubble user-bubble">
          <text class="original-text">{{answer}}</text> <!-- 相似度最高的原始答案 -->
        </view>
      </view>
    </view>
    <view class="footer">
      <button class="action-button" bindtap="saveImage">保存图片</button>
      <button class="action-button" bindtap="sharePage">转发给朋友</button>
    </view>
  </view>
</view>