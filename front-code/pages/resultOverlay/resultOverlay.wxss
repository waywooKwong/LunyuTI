.result-container {
  display: flex;
  flex-direction: column;
  padding: 20px;
  background-color: #ffffff;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 顶部部分 */
.top-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20px;
}

.disciple-name-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20px;
  background-color: #f0f0f0;
  border: 2px solid #493737;
  border-radius: 10px;
  padding: 10px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
}

.disciple-name-char {
  font-size: 28px;
  font-weight: bold;
  color: #493737;
}

.disciple-info-box {
  background-color: #f9f9f9;
  border: 2px solid #493737;
  border-radius: 10px;
  padding: 15px;
  width: 60%;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
}

.disciple-description {
  font-size: 14px;
  color: #666;
  text-align: left;
}

/* 中部内容部分 */
.discussion-section {
  background-color: #ffffff;
  border: 2px solid #493737;
  border-radius: 10px;
  padding: 15px;
  margin-bottom: 20px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
}

.discussion-header {
  margin-bottom: 15px;
}

.discussion-title {
  font-size: 16px;
  font-weight: bold;
  color: #493737;
  margin-bottom: 10px;
}

.discussion-topic, .discussion-question {
  background-color: #eaeaea;
  border: 1px solid #ccc;
  padding: 8px;
  margin: 5px 0;
  border-radius: 5px;
  box-shadow: inset 0px 2px 4px rgba(0, 0, 0, 0.1);
}

.discussion-topic-text, .discussion-question-text {
  font-size: 14px;
  color: #666;
  text-align: left;
}

.discussion-answers {
  margin-top: 15px;
}

.answer-item {
  display: flex;
  margin-bottom: 10px;
}

.answer-label {
  font-size: 14px;
  font-weight: bold;
  color: #493737;
  margin-right: 5px;
}

.answer-text {
  font-size: 14px;
  color: #666;
}

/* 底部操作部分 */
.bottom-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.action-buttons {
  display: flex;
  gap: 10px;
}

.icon-button {
  background-color: transparent;
  border: none;
  padding: 5px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon {
  width: 24px;
  height: 24px;
}

.link-area {
  display: flex;
  justify-content: flex-end;
}

.link-text {
  font-size: 14px;
  color: #493737;
  text-decoration: underline;
  cursor: pointer;
}
