<view class="container">
  <view class="word-cloud" style="position: relative; left: 4rpx; top: -14rpx">
    <text class="title">请选择感兴趣的话题</text>
    <text class="subtitle">\n选择 1 - 3 个你最感兴趣的主题</text>
    <view class="topics">
      <view class="topic {{item.selected? 'selected' : ''}}" 
            wx:for="{{topics}}" 
            wx:key="index" 
            bindtap="toggleTopic" 
            data-index="{{index}}">
        {{item.name}}
      </view>
    </view>
    <button class="confirm-btn" bindtap="confirmSelection" disabled="{{selectedCount === 0}}">
      确认选择 ({{selectedCount}}/3)
    </button>
  </view>
</view>