.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 20px;
  box-sizing: border-box;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.start-btn {
  width: 80%;
  padding: 15px;
  background-color: #07c160;
  color: white;
  font-size: 18px;
  border-radius: 8px;
  margin-bottom: 20px;
}

.intro {
  font-size: 16px;
  color: #666;
  text-align: center;
}