.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 10px;
  box-sizing: border-box;
  background-color: #F5EFE6;
}

.topics-area {
  margin-bottom: 10px;
}

.topics-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.topic-items {
  display: flex;
  flex-wrap: wrap;
}

.topic-item {
  display: inline-block;
  background-color: #C78F79;
  color: #fff;
  padding: 5px 8px;
  margin: 5px 5px 0 0;
  border-radius: 5px;
  font-size: 14px;
}

.dialogue-box {
  flex-grow: 1;
  margin-bottom: 10px;
  padding: 10px;
  background-color: #fff;
  border-radius: 8px;
  overflow-y: scroll;
}

.dialogue-item {
  display: flex;
  margin-bottom: 10px;
}

.system-bubble {
  max-width: 70%;
  padding: 10px;
  background-color: #C78F79;
  border-radius: 10px;
  word-wrap: break-word;
}

.user-bubble {
  max-width: 70%;
  padding: 10px;
  background-color: #493737;
  color: #fff;
  border-radius: 10px;
  word-wrap: break-word;
  margin-bottom: 10px;
  margin-left: auto;
}

.original-text {
  font-family: "SimSun", serif;
  font-size: 18px;
  color: #ecfae0;
  line-height: 1.5;
}

.translation-text {
  font-family: "KaiTi", serif;
  font-size: 14px;
  color: #d4f3d6;
  margin-top: 5px;
  line-height: 1.5;
}

.input-area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #B8860B;
  padding-top: 10px;
}

.input-field {
  flex-grow: 1;
  margin-right: 10px;
  padding: 10px;
  border: 1px solid #B8860B;
  border-radius: 5px;
  font-size: 16px;
  height: 50px;
  box-sizing: border-box;
}

.submit-button {
  background-color: #493737;
  color: #fff;
  padding: 10px 15px;
  border-radius: 5px;
  font-size: 16px;
}